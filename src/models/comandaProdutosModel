const Sequelize = require("sequelize")
const sequelizeDB = require("../sequelize/sequelizeConfigs");
const Comanda = require("./comandaModel");
const Produto = require("./produtoModel");

const ComandaProdutos = sequelize.define("ComandaProdutos", 
{
    comandaID: {
      type: DataTypes.INTEGER,
      references: {
        model: Comanda,
        key: 'id'
      }
    },
    produtoID: {
      type: DataTypes.INTEGER,
      references: {
        model: Produto,
        key: 'id'
      }
    }
  });

Comanda.belongsToMany(Produto, { through: ComandaProdutos });
Produto.belongsToMany(Comanda, { through: ComandaProdutos });